{% macro map(spot) %}

    <div class="row">
        <div class="col-sm-12" style="height: 400px" id="map-canvas">
        </div>
    </div>


    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBsZg9TbRTh7n4zfPArWf3lqVLdVB1xlko&callback=initialize">
    </script>
    <script type="text/javascript">
        function initialize() {
            var spotLatlng = { lat: {{ spot.gpsLat }} , lng: {{ spot.gpsLong }} };

            var mapOptions = {
                center: spotLatlng,
                zoom: 15,
                mapTypeId: google.maps.MapTypeId.SATELLITE
            };
            var map = new google.maps.Map(document.getElementById('map-canvas'),
                    mapOptions);

            var marker = new google.maps.Marker({
                position: spotLatlng,
                map: map,
                title: 'Spot'
            });
        }
        $(window).load(function(){
            google.maps.event.addDomListener(window, 'load', initialize);
        });
    </script>



{% endmacro %}
{% extends 'LaPoizWindBundle:BackOffice:base.html.twig' %}

{% block scripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/lapoizwind/js/tinymce/tinymce.min.js') }}"></script>
    {{ form_javascript(form) }}
{% endblock %}


{% block bodyPage %}

    <div class="row">
        <div class="col-sm-12">
            {{ form_start(form, {
                'style': 'horizontal',
                'label_col': 2,
                'widget_col': 8,
            })}}

            {% if listSpotWitoutRegion is not null %}
                {% for spot in listSpotWitoutRegion %}
                    <li>{{ spot.nom }}</li>
                {% endfor %}
            {% endif %}


            {{ form_errors(form, { 'global_errors': true }) }}

            {{ form_end(form) }}

        </div>

    </div>


{% endblock %}
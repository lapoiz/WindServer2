{% extends 'LaPoizWindBundle:BackOffice:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/lapoizwind/js/tinymce/tinymce.min.js') }}"></script>
    {{ form_stylesheet(form) }}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}

{% block bodyPage %}
    <h1>Cr√©ation d'un nouveau site</h1>
    <div class="row">
        <div class="col-sm-12">
            {{ form_start(form, {
                'style': 'horizontal',
                'label_col': 2,
                'widget_col': 8,
            })}}

            {{ form_errors(form, { 'global_errors': true }) }}

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
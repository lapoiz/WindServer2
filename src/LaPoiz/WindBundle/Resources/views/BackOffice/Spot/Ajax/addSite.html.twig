    <h2>Ajout d'un site Internet au spot</h2>

    <div class="row">
        <div class="col-sm-12">
            {{ form_start(form, {
                'style': 'horizontal',
                'label_col': 2,
                'widget_col': 8,
            })}}

            {{ form_errors(form, { 'global_errors': true }) }}

            {{ form_end(form) }}

        </div>
    </div>

    <script>
        $("#spot_form").submit(function(){

            $('#result').html('<img src="{{ asset('bundles/lapoizwind/images/loading.gif') }}" alt="Loading Ajax data" />');
            var formElement = $('#addSite_form');

            var DATA = formElement.serialize();
            //var formData = new FormData(formElement);
            $.ajax({
                type: "POST",
                url: "{{ path('_bo_ajax_spot_add_site', {'id':spot.id})}}",
                data: DATA,
                cache: false,
                success: function(data){

                    window.location.replace("{{ path('_bo_ajax_spot_display', {'id':spot.id})}}");
                },
                error: function(XHR, status, error){
                    console.log(error);
                },
                complete: function(XHR, status){
                    console.log(status);
                }
            });
            return false;
        })
    </script>
